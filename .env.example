# Environment Configuration for Blockchain Analysis
# Copy this file to .env and update with your values

# Database Configuration
POSTGRES_USER=blockchain_user
POSTGRES_PASSWORD=blockchain_secure_password_2024
POSTGRES_DB=blockchain_analysis
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Bitcoin Node Configuration
BITCOIN_RPC_USER=bitcoinrpc
BITCOIN_RPC_PASSWORD=secure_rpc_password_2024
BITCOIN_RPC_HOST=bitcoind
BITCOIN_RPC_PORT=8332

# Ingest Configuration
INGEST_BATCH_SIZE=100
INGEST_START_HEIGHT=0
INGEST_END_HEIGHT=10000
LOG_LEVEL=INFO

# Legacy configuration (for backward compatibility)
RPC_USER=bitcoinrpc
RPC_PASSWORD=secure_rpc_password_2024
RPC_HOST=bitcoind
RPC_PORT=8332
PGHOST=postgres
PGUSER=blockchain_user
PGPASSWORD=blockchain_secure_password_2024
PGDATABASE=blockchain_analysis
MEMPOOL_SNAPSHOT_INTERVAL=60
BLOCK_INGEST_INTERVAL=120

# Security Note:
# - Change all passwords before deploying to production
# - Never commit .env file to git
# - Use strong, randomly generated passwords
