# Environment Configuration for Blockchain Analysis
# Copy this file to .env and update with your values

# Bitcoin RPC Configuration
RPC_USER=bitcoin
RPC_PASSWORD=your_secure_rpc_password
RPC_HOST=bitcoind
RPC_PORT=8332
RPC_TIMEOUT=30

# PostgreSQL Configuration
PGHOST=postgres
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_secure_db_password
PGDATABASE=blockchain

# Ingest Configuration
MAX_BLOCKS_PER_RUN=1000
BATCH_SIZE=100
BLOCK_INGEST_INTERVAL=30
MEMPOOL_SNAPSHOT_INTERVAL=60

# Server Deployment Configuration (for manage.ps1)
SERVER_HOST=your.server.address
SERVER_USER=your_ssh_user
LOG_LEVEL=INFO

